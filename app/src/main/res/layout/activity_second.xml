<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/trad"
    android:orientation="vertical"
    tools:context=".Second">


    <androidx.cardview.widget.CardView
        android:id="@+id/Tales"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_margin="50dp"
        app:cardCornerRadius="50dp"
        android:elevation="70dp" >

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="287dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/an" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="147dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/av" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/barriecito"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:text="HISTORY OF VALENTINE"
            android:textSize="15sp" />
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/Secret"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_margin="50dp"
        android:elevation="70dp"
        app:cardCornerRadius="50dp">

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="251dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/av" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/an" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/barrio"
            android:text="SPECIAL MESSAGE FOR YOU"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/Pressable"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_margin="50dp"
        app:cardCornerRadius="50dp"
        android:elevation="70dp" >

        <ImageView
            android:id="@+id/imageView12"
            android:layout_width="109dp"
            android:layout_height="70dp"
            app:srcCompat="@drawable/am" />

        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="114dp"
            android:layout_height="125dp"
            app:srcCompat="@drawable/am" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/chango"
            android:text="CLICK ME"
            android:textColor="@color/black"
            android:textStyle="bold" />
    </androidx.cardview.widget.CardView>

</LinearLayout>