<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bb"
    tools:context=".History">


    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bungee_shade"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:layout_margin="50dp"
        android:text="HAPPY VALENTINE DAY" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/frijole"
        android:layout_marginTop="50dp"
        android:textColor="@color/black"
        android:text="VALENTINE DAY, ALSO CALLED SAINT VALENTINE'S DAY OR FEAST OF SAINT VALENTINE, IS CELEBRATED
ANNUALLY ON FEBRUARY 14. IT ORIGNATED AS CRISTIAN FEAST DAY HONORING A MARTYR NAMED VALENTINE. tHROUGH LATER FOLK TRADITIONS, IT HAS BECOME A SIGNIFICANT CULTURAL AND COMMERCIAL CELEBRATION OF ROMANCE AND LOVE IN MANY REGIONS OF THE WORLD. "
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/Extra"
        android:layout_width="190dp"
        android:layout_height="20dp"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:fontFamily="@font/barrio"
        android:layout_gravity="center"
        android:layout_margin="150dp"
        android:text="CURIOUS?...CLICK ME!" />


</LinearLayout>